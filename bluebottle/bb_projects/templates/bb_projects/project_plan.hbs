{% load bb_ember %}
{% load i18n %}
{% load static %}

{% tplhandlebars "project_plan" %}
    <div class="l-section" id="project-plan">
        <!-- <section class="l-wrapper"> -->

			<nav class="project-plan-navigation">
				
				<div class="project-plan-title">
					<h1>Project plan</h1>
					<h4>{{title}}</h4>
				</div>
				
				<ul class="project-plan-navigation-links">
					{{#each header in getHeaderLinks}}
					<li><a class="project-plan-main-link" {{bindAttr href=header.href}}>{{header.name}}</a></li>
					{{/each}}
					<li class="project-plan-download-pdf">
						<a href="#"><span class="flaticon solid download-document-1"></span> Download as PDF</a>
					<li>
				</ul>
			</nav>
			
			<div class="project-plan-main-container">
				<a class="project-plan-back-link" data-dismiss="modal" href="#">Back to project<span class="flaticon stroke x-1"></span></a>
				<article class="project-plan-main">
					{{{storyWithHeaderIds}}}
				</article>
			</div>
			<div class="project-plan-map">
				<img src="http://maps.googleapis.com/maps/api/staticmap?center=Brooklyn+Bridge,New+York,NY&zoom=13&size=300x1200&maptype=roadmap
&markers=color:blue%7Clabel:S%7C40.702147,-74.015794&markers=color:green%7Clabel:G%7C40.711614,-74.012318
&markers=color:red%7Clabel:C%7C40.718217,-73.998284&sensor=false" />
			</div>
        <!-- </section> -->
    </div>

{% endtplhandlebars %}