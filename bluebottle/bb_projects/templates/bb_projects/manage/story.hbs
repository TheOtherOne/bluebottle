{% load bb_ember %}
{% load i18n %}
{% load static %}


{% tplhandlebars "my_project_story" %}

    {{#unless isPhasePlanNew}}
        {{bb-flash data=flash}}
    {{/unless}}

    <legend>
        <strong>{% trans "Project Description" %}</strong>
        <p>{% trans "Time to blow us away with the details! Tell us about your motivation, why this project is important and what the impact will be." %}</p>
    </legend>

    <fieldset>
        <ul>
            {% bb_component 'bb-text-area' rows=10 name='whywhat' label=_('Why, what and how') hint=_('Describe your project in more detail') valueBinding='description' placeholder=_('Describe your project') errors='errors.description' maxlength=800 %}

            {% bb_component 'bb-text-area' rows=5 label=_('Goal') name='goal' hint=_('What do you want to achieve with this project?') valueBinding='goal' placeholder=_('Describe the goal of the project') maxlength=800 %}

            {% bb_component 'bb-text-area' rows=5 label=_('Destination Impact') name='destination_impact' hint=_('How will your project have an impact?') placeholder=_('Describe the expected impact of your project') valueBinding='destination_impact' maxlength=800 %}


        </ul>
    </fieldset>

{{ partial '_my_project_save_edit_footer'}}

{% endtplhandlebars %}
