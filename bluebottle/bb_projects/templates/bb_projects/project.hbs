{% load bb_ember %}
{% load i18n %}
{% load static %}

{% tplhandlebars "project" %}
<div id="project-detail">
    <div id="project-detail-header" {{bindAttr class=":l-section amount_asked::without"}}>
        <div class="project-background">
            <div class="project-background-image" {{bindAttr style=backgroundStyle}}></div>
        </div>
        <section class="project-header">
            <article class="project-info">
                <div class="project-meta">
                    <span class="project-location">{{country.name}}</span>
                    <span class="project-category">{{theme.name}}</span>
                </div>
                <h1 class="project-title">{{title}}</h1>
                <p class="project-description">{{pitch}} <a {{action openInFullScreenBox "projectPlan" this}} class="project-more">{% trans "Read full project plan" %}</a></p>
            </article>
            <aside class="project-media">
                <div class="project-share">
                    {{view App.SocialShareView}}
                </div>
                {{#if video_html}}
                    <figure class="project-image">
                        <span {{bindAttr class="partner.id:"}}></span>
                        {{{ video_html }}}
                    </figure>
                {{else}}
                    <figure class="project-image">
                        <span {{bindAttr class="partner.id:"}}></span>
                        <img {{bindAttr src="image.large"}} width="100%" alt="Photo" />
                    </figure>
                {{/if}}
            </aside>
        </section>
        {{partial '_project_actions'}}
    </div>
    {{outlet}}
</div>
{% endtplhandlebars %}