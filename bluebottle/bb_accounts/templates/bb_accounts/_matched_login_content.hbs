{% load i18n bb_ember %}


{% tplhandlebars "_matched_login_content" %}
    <div class="modal-fullscreen-header">
        <span class="modal-fullscreen-close" {{action "close"}}>
            <object type="image/svg+xml" data="/static/assets/images/icons/icon-close-modal.svg" class="modal-close-image"></object>
        </span>
        <h4>{%trans "Is it me your looking for?"%}</h4>
    </div>
    <div class="modal-fullscreen-profile">
        <span class="photo">
            <img {{bindAttr src="matchedUser.getAvatar"}}>
        </span>
        <span class="already-registerd">
            <strong>{{username}}</strong> {%trans "has already been registered with 1%Club. Is this you? Please sign in below" %}
        </span>
    </div>

    <div class="modal-fullscreen-content got-header">
        {{#if socialMatch}}
            {{partial "social_login_errors"}}
            {{partial "social_logins"}}
        {{else}}
            {{partial "standard_login_form"}}
        {{/if}}
        {{partial "standard_login_errors"}}
    </div>
{% endtplhandlebars %}