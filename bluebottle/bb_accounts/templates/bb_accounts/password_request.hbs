{% load bb_ember i18n %}

{% tplhandlebars "password_request" %}

    <div class="modal-fullscreen-content">
        <span {{action 'modalSlideBack' 'login'}} class="modal-fullscreen-back"></span>
        <span {{action 'close'}} class="modal-fullscreen-close"></span>

        <h4>{{requestResetPasswordTitle}}</h4>
        <br />

        {{input valueBinding="controllers.login.username" type="text" name="username" maxlength="254" placeholder="E-mailaddress" }}

        <a {{action 'requestReset' model}} class="btn is-active">{% trans "Continue" %}</a>

        {{#if error.email}}
            <div class="modal-flash-message error">
                {{error.email}}
            </div>
        {{/if}}

    </div>
    <div class="modal-fullscreen-footer">
        <span class="modal-btn-signup" href="#">
            {% trans "Donâ€™t have an account?" %}
            <a {{ action 'modalFlip' 'signup' }}>
                {% trans "Sign up here" %}
            </a>
        </span>
    </div>

{% endtplhandlebars %}


