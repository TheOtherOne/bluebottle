{% load bb_ember %}
{% load i18n %}
{% load static %}

{% tplhandlebars "task_summary" %}

	<li class="activity-item">
		{{#link-to "task" this class="item-link"}}
			<strong class="item-title">{{title}}</strong>
			<span class="item-meta">
				<span class="item-people"><em>{{membersCount}}</em> {% trans "assigned" %}</span>
				<span class="item-time"><em>{{time_needed}}</em> {% trans "hour" %}</span>
				<span class="item-deadline"><em>{{localize deadline formatting="X"}}</em></span>
			</span>
			{{#if isStatusOpen}}
			    <span class="item-status task-open">{% trans "Open" %}</span>
			{{/if}}
			{{#if isStatusInProgress}}
			    <span class="item-status task-running">{% trans "Running" %}</span>
			{{/if}}
			{{#if isStatusClosed}}
			    <span class="item-status task-closed">{% trans "Closed" %}</span>
			{{/if}}
			{{#if isStatusRealized}}
			    <span class="item-status task-done">{% trans "Done" %}</span>
			{{/if}}
			
		{{/link-to}}
	</li>

{% endtplhandlebars %}