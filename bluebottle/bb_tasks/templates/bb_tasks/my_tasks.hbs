{% load bb_ember i18n static %}


{% tplhandlebars "myTaskList" %}
    <div class="l-section" id="project-dashboard">

        <div class="l-section campaign-header">
            <nav class="l-wrapper">
                <header>
                    <h1 class="page-title">{% trans "My tasks"%}</h1>
                </header>
            </nav>
        </div>
        
        <div class="l-wrapper">
            {{#if isLoading}}
                <div class="is-loading-big">
                    <img src="{% get_static_prefix %}images/loading.gif" /> <strong>{% trans "Loading tasks" %}</strong>
                </div>
            {{else}}
                <div class="l-content">
                    <ul class="project-list">
                        <h3>{% trans "Tasks you created" %}</h3>
                        <ul id="search-results">
                            {{#each task in ownerTasks}}
                                {{partial "_my_task_preview"}}
                            {{else}}
                                <li class="no-results">{% trans "No tasks found." %}</li>
                            {{/each}}
                        </ul>

                        <h3>{% trans "Tasks you joined" %}</h3>
                        <ul id="search-results">
                            {{#each memberTasks}}
                                {{partial "_my_task_preview"}}
                            {{else}}
                                <li class="no-results">{% trans "No tasks found." %}</li>
                            {{/each}}
                        </ul>
                    </ul>
                </div>
            {{/if}}
        </div>
    </div>

{% endtplhandlebars %}