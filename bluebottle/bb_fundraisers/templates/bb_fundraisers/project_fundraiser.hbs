{% load i18n bb_ember static %}


{% tplhandlebars "project_fundraiser" %}
    <li class="activity-item">
        {{#link-to "fundRaiser" fundraiser classNames='member'}}
            <figure class="user-avatar">
                <img {{bindAttr src="image.square" alt="owner.first_name" }} />
            </figure>
            <span class="activity-body">
            <p><strong>{{owner.first_name}}</strong> {% trans "raised" %} &euro; {{amount_donated}} {% trans "so far" %}</p>
                {{!-- TODO: different text and design when fundraiser reached target or deadline --}}
                <span class="progress-bar">
                    {{bb-progressbar class="project-fund-amount-slider" targetValue=amount currentValue=amount_donated}}
                </span>
            </span>
        {{/link-to}}
    </li>
{% endtplhandlebars %}