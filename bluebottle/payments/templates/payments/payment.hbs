{% load bb_ember i18n static %}

{% tplhandlebars "payment" %}
	<div class="modal-fullscreen-content" id="payment">
		<span {{action 'chooseAmount'}} class="modal-fullscreen-back"></span>
		<span {{action 'closeModal'}} class="modal-fullscreen-close"></span>
		<h4>{% blocktrans %}Select your method of payment{% endblocktrans %}</h4>
		<big>{% blocktrans %}You're about to support &euro; {{total}},- to 'â€¦'. Good job!{% endblocktrans %}</big>
		
		<div class="row">
			<div class="col12">
			    <ul class="payment-tabs">
			        {{#each method in methods}}
                        {{view 'App.PaymentMethodView' contentBinding='method'}}
			        {{/each}}
			    </ul>
			</div>
		</div>
		<div class="row">
			<div class="col12">
    			<a class="btn btn-sec payment-btn" {{action 'nextStep'}}>Next</a>
			</div>
		</div>
	</div>
	<div class="modal-fullscreen-footer">
		<div class="modal-payment-provider">
			<span>Payment processing is handled by <a href="#">Docdata</a>.</span>
		</div>
	</div>
{% endtplhandlebars %}

{% tplhandlebars "payment_provider_layout" %}
    <li {{bindAttr class="view.isSelected:is-active"}} {{action 'selectedPaymentMethod' view.content}}>
        <input type="radio" name="tabs"/>
        <label >{{view.content.name}}</label>
        <div class='payment-tab-content'>
            {{yield}}
        </div>
    </li>
{% endtplhandlebars %}

