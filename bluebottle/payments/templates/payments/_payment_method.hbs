{% load bb_ember i18n static %}


{% tplhandlebars "_payment_method" %}
    <div {{bindAttr class=":modal-fullscreen-content"}}>
		<span {{action 'closeModal'}} class="modal-fullscreen-close"></span>

        <p><h1>{% blocktrans %}Select Payment Method{% endblocktrans %}</h1></p>
        Total amount: &euro; {{totalAmount}}<br/>

        <ul>
            {{#each method in methods}}
                <li>{{method.provider}} - {{method.name}}</li>
            {{/each}}
        </ul>

        <button {{action 'nextStep'}}>Next</button>
        {{ partial "_payment_errors" }}
    </div>

{% endtplhandlebars %}