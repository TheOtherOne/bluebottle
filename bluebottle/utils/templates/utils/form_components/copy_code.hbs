{% load templatetag_handlebars %}
{% load i18n %}
{% load static %}

{% tplhandlebars "components/bb-copy-code" %}

    <div class="input-append">
        <a class="copy-to-clipboard" {{bindAttr data-clipboard-text=value}} title="Copy to clipboard">
            <span class="flaticon solid add-to-clipboard"></span>
            {% trans "Copy" %}
        </a>
        <span class="snippet">{{value}}</span>
    </div>

{% endtplhandlebars %}
