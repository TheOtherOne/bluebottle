{% load bb_ember %}
{% load i18n %}
{% load static %}

{% tplhandlebars "donation_wall_post" %}
    <div class="wallpost-form">
        {{view Ember.TextArea valueBinding="text" cols="50" rows="4" name="wallpost-update" classBinding="errors.text.length:error" placeholder="Your comment"}}

        {{#if errors.text }}
            <div class="errors">{{#each errors.text }}<p>{{this}}</p>{{/each}}</div>
        {{/if}}

        <div class="row">
            <div class="col6">
                <button class="btn btn-cancel disabled" {{action 'closeModal'}}>{% trans "No Thanks" %}</button>
            </div>
            <div class="col6">
                <button class="btn btn-primary btn-save" {{action 'saveWallPost'}}>{% trans "Leave Message" %}</button>
            </div>
        </div>
    </div>
{% endtplhandlebars %}
