{% load bb_ember %}
{% load i18n %}
{% load static %}

{% tplhandlebars "project_supporter" %}

    {{#if supporter.user}}
        <a class="member" {{action 'openInBigBox' 'userModal' supporter.user }} {{bindAttr data-title="supporter.user.full_name" }}>
            <span class="member-avatar"><img {{bindAttr src="supporter.user.getAvatar" alt="supporter.user.full_name"}} /></span>
        </a>
    {{else}}
        <a class="member" data-title="guest" {{bindAttr data-content="supporter.time_since"}}>
            <span class="member-avatar"><img src="/static/assets/images/default-avatar.png"  alt="{% trans 'Guest' %}" /></span>
        </a>
    {{/if}}

{% endtplhandlebars %}