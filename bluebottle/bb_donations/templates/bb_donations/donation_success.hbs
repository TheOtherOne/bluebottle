{% load bb_ember i18n static %}

{% tplhandlebars "donation_success" %}
    <div id="donation-success" class="modal-fullscreen-content">
        <div class="backdrop">
            <img {{bindAttr src="project.getProject.image.large"}} class="backdrop-image" />
        </div>
        <span {{action 'closeModal'}} class="modal-fullscreen-close">&times;</span>
        <span class="donor-name">{{currentUser.full_name}}</span>
        <h4>{% trans "Thanks for your support" %}</h4>
        <div class="top-icon"><img {{bindAttr src="currentUser.getAvatar"}} /></div>
        {{render 'donationWallPost'}}

    </div>
    <div class="modal-fullscreen-footer">
    </div>
{% endtplhandlebars %}