{% load bb_ember i18n static %}

{% tplhandlebars "docdataDirectdebit" %}
    <form class="directdebit-list">
        <div class="row">
            <div class="col8">
                <label><strong>{% trans "Your IBAN number" %}</strong></label>
                {{view Em.TextField valueBinding="iban" id="accountnumber" placeholder="NL11BANK0123456789"}}
            </div>
            <div class="col4">
                <label><strong>{% trans "BIC/Swift" %}</strong></label>
                {{view Em.TextField valueBinding="bic" id="bicswift" placeholder="BANKNL1A"}}
            </div>
        </div>
        <div class="row">
            <div class="col12">
                <label><strong>{% trans "Your name (as on bank account)" %}</strong></label>
                {{view Em.TextField valueBinding="account_name"}}
            </div>
        </div>
        <div class="row">
            <div class="col12">
                <label><strong>{% trans "Your city" %}</strong></label>
                {{view Em.TextField valueBinding="account_city"}}
            </div>
        </div>
        <div class="row">
            <div class="col12">
                <label for="agreeDirectDebitCheckbox" class="modal-checkbox">
                    {{view Em.Checkbox checkedBinding="agree" id="agreeDirectDebitCheckbox"}}
                    <span></span>
                    {% blocktrans%}
                        I agree with the above metioned amount to be withdrawn from my account via direct debit.
                    {% endblocktrans%}
                </label>
            </div>
        </div>
    </form>
{% endtplhandlebars %}