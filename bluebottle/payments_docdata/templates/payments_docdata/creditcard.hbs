{% load bb_ember i18n static %}

{% tplhandlebars "docdataCreditcard" %}
    <form>
        <h6>{% trans 'Select your creditcard type'%}</h6>
        {% blocktrans %} 
            We'll redirect you through our payment service provider where you can finish your donation securely.
        {% endblocktrans%}
        <ul class="card-types-list">
            <li>
                <label for="mastercard" {{bind-attr class='isMastercard:is-active:'}}>
                    {{view App.RadioButton name='creditcard' value='mastercard' id='mastercard' selectionBinding='default_pm'}}
                    <i class="checked-icon"></i>
                    <span class="creditcard-type">Mastercard</span>
                    <span class="icon-card mastercard"></span>
                </label>
            </li>
            <li>
                <label for="visa" {{bind-attr class='isVisa:is-active:'}}>
                    {{view App.RadioButton name='creditcard' value='visa' id='visa' selectionBinding='default_pm'}}
                    <i class="checked-icon"></i>
                    <span class="creditcard-type">Visa</span>
                    <span class="icon-card visa"></span>
                </label>
            </li>
        </ul>
    </form>
{% endtplhandlebars %}
