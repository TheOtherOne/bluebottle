<section class="l-wrapper">
    <div class="l-full">
        
        <header class="page-header">
            <h1>Order History</h1>
        </header>
        
        {{#if model.isLoaded}}
        
            <table class="fund-history">
                {{#each order in controller}}
                <tr>
                    <td class="fund-history-date">{{localize order.created formatting='d'}}</td>
                    <td class="fund-history-type">{{#if order.recurring}} Monthly Donation {{else}} Single Donation {{/if}}</td>
                    <td class="fund-history-total">&euro;{{order.total}},-</td>
                    <td>
                        <table>
                            {{#each donation in order.donations}}
                            <tr>
                                <td class="fund-history-project"><a>{{donation.project.title}}</a></td>
                                <td class="fund-history-amount">&euro;{{donation.amount}},-</td>
                            </tr>
                            {{/each}}
                        </table>
                    </td>
                </tr>
                {{/each}}
            </table>
        {{else}}
            <div class="is-loading-small"><img src="images/loading.gif"> <strong>Loading order history&#8230;</strong></div>
        {{/if}}
            
    </div>
</section>