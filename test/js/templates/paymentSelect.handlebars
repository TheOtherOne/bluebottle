{{#if controllers.currentOrder.recurring}}
	{{outlet}}
{{else}}
	<div class="l-content fund-payment-select">
		<form>
	    	<legend>
				<strong>You're almost there!</strong>
				<p>We'll redirect you through our payment provider where you can finish your donation securely.</p>
			</legend>

                <ul class="tabs tabs-vertical">
                    {{#view Em.RadioButtonGroup name="paymentMethod" selectedValueBinding="redirectPaymentMethod" class="radio-group-tabbed"}}
                        {{#each redirectPaymentMethods}}
                            <li class="tab-item">
                                <label class="tab-title radio">{{view view.RadioButton valueBinding=id}} <span>{{name}}</span></label>
                            </li>
                        {{/each}}
                    {{/view}}
                </ul>



                    {{#if isIdeal}}
                    <div class="tab-content fund-payment-type">
                        <h3>Select your bank below</h3>
                        <p>We'll redirect you through our payment provider where you can finish your donation securely.</p>
                        <ul>
                        {{#view Em.RadioButtonGroup name="issuerId" selectedValueBinding="idealIssuerId" class="radio-group-tabbed"}}
                            {{#each idealIssuers}}
                                <li class="fund-payment-item">
                                    <label class="radio">{{view view.RadioButton valueBinding=id}} <span>{{name}}</span></label>
                                </li>
                            {{/each}}
                        {{/view}}
                        </ul>

                        {{#if idealIssuerId}}
                            {{#if paymentInProgress}}
                                <div class="is-loading-small"><img src="images/loading.gif"> <strong>Processing payment&#8230;</strong></div>
                                <button disabled="disabled" class="btn btn-primary btn-iconed btn-submit"><span class="flaticon solid right-2"></span>Proceed with Payment</button>
                            {{else}}
                                <button class="btn btn-primary btn-iconed btn-proceed"><span class="flaticon solid right-2"></span>Proceed with Payment</button>
                            {{/if}}
                        {{else}}
                            <button class="btn btn-primary btn-iconed btn-proceed" disabled="disabled"><span class="flaticon solid right-2"></span>Proceed with Payment</button>

                        {{/if}}
                    </div>
                    {{else}}
                        {{#if redirectPaymentMethod}}
                        <div class="tab-content fund-payment-type">
                            <h3>You're almost there!</h3>
                            <p>We'll redirect you through our payment provider where you can finish your donation securely.</p>

                            {{#if paymentInProgress}}
                                <div class="is-loading-small"><img src="images/loading.gif"> <strong>Processing payment&#8230;</strong></div>
                                <button disabled="disabled" class="btn btn-primary btn-iconed btn-submit"><span class="flaticon solid right-2"></span>Proceed with Payment</button>
                            {{else}}
                                <button class="btn btn-primary btn-iconed btn-proceed"><span class="flaticon solid right-2"></span>Proceed with Payment</button>
                            {{/if}}
                        </div>
            	        {{/if}}
                    {{/if}}
            </div>

		</form>
	</div>
{{/if}}