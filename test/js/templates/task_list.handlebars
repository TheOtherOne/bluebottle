{{render "taskSearchForm"}}
    
    <div class="l-section">
        <section class="l-wrapper">
            {{#if model.isLoaded}}
                <ul id="search-results">
                    {{#each task in model}}
                        {{render "taskPreview" task}}
                    {{else}}
                        <li class="no-results">No tasks found.</li>
                    {{/each}}
                </ul>
            {{else}}
                <div class="is-loading-big"><img src="images/loading.gif"> <strong>Loading tasks</strong></div>
            {{/if}}
        </section>
    </div>